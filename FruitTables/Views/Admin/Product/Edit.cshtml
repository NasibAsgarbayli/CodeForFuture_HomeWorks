@model fruitables_1_0_0.Models.Product
@{
    var categories = ViewBag.Categories as List<fruitables_1_0_0.Models.Category>;
}
<h2>Product Redaktə</h2>
<form method="post" action="/Admin/Product/Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="text" name="Name" value="@Model.Name" required /> <br />
    <input type="text" name="Description" value="@Model.Description" required /> <br />
    <input type="number" name="Price" value="@Model.Price" required /> <br />
    <input type="text" name="ImageUrl" value="@Model.ImageUrl" /> <br />
    <select name="CategoryId">
        <option value="">Kateqoriya seçin</option>
        @if (categories != null)
        {
            foreach (var cat in categories)
            {
                <option value="@cat.Id" @(cat.Id == Model.Id ? "selected" : "")>@cat.Name</option>
            }
        }
    </select><br />
    <button type="submit">Yadda saxla</button>
</form>